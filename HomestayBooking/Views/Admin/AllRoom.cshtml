@model List<HomestayBooking.DTOs.RoomDto.RoomDto>
@{
}
<!DOCTYPE html>
<html lang="en">


<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
	<title>Hotel Dashboard Template</title>

	<!-- Favicon -->
	<link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.png">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="~/assets/css/bootstrap.min.css">

	<!-- Fontawesome CSS -->
	<link rel="stylesheet" href="~/assets/plugins/fontawesome/css/all.min.css">
	<link rel="stylesheet" href="~/assets/plugins/fontawesome/css/fontawesome.min.css">

	<link rel="stylesheet" href="~/assets/plugins/datatables/datatables.min.css">

	<!-- Feathericon CSS -->
	<link rel="stylesheet" href="~/assets/css/feathericon.min.css">

	<link rel="stylesheet" href="~/assets/plugins/morris/morris.css">

	<!-- Main CSS -->
	<link rel="stylesheet" href="~/assets/css/style.css">

	<!--[if lt IE 9]>
	<script src="~/assets/js/html5shiv.min.js"></script>
	<script src="~/assets/js/respond.min.js"></script>
	<![endif]-->
</head>

<body>
	<!-- Main Wrapper -->
	<div class="main-wrapper">
		<!-- Header -->
		<div class="header">

			<!-- Logo -->
			<div class="header-left">
				<a href="/Admin/Index" class="logo">
					<img src="~/img/client/logo.png" width="50" height="70" alt="logo">
				</a>
				<a href="/Admin/Index" class="logo logo-small">
					<img src="~/img/client/logo.png" alt="Logo" width="30" height="30">
				</a>
			</div>
			<!-- /Logo -->
			<a href="javascript:void(0);" id="toggle_btn">
				<i class="fe fe-text-align-left"></i>
			</a>
			<!-- Mobile Menu Toggle -->
			<a class="mobile_btn" id="mobile_btn">
				<i class="fas fa-bars"></i>
			</a>
			<!-- /Mobile Menu Toggle -->
			<!-- Header Right Menu -->
			<ul class="nav user-menu">


				<!-- User Menu -->
				<li class="nav-item dropdown has-arrow">
					<a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
						<span class="user-img">
							<img class="rounded-circle" src="~/assets/img/profiles/avatar-01.jpg" width="31"
								 alt="Dexter Smith">
						</span>
					</a>
					<div class="dropdown-menu">
						<div class="user-header">
							<div class="avatar avatar-sm">
								<img src="~/assets/img/profiles/avatar-01.jpg" alt="User Image"
									 class="avatar-img rounded-circle">
							</div>
							<div class="user-text">
								<h6>Dexter Smith</h6>
								<p class="text-muted mb-0">Administrator</p>
							</div>
						</div>
						<a class="dropdown-item" href="/Admin/Profile">My Profile</a>
						<a class="dropdown-item" href="/Auth/Login">Logout</a>
					</div>
				</li>
				<!-- /User Menu -->

			</ul>
			<!-- /Header Right Menu -->
			<div class="top-nav-search">
				<form>
					<input type="text" class="form-control" placeholder="Search here">
					<button class="btn" type="submit"><i class="fas fa-search"></i></button>
				</form>
			</div>
		</div>
		<!-- /Header -->
		<!-- Sidebar -->
		<div class="sidebar" id="sidebar">
			<div class="sidebar-inner slimscroll">
				<div id="sidebar-menu" class="sidebar-menu">
					<ul>

						<li class="active">
							<a href="/Admin/Index"><i class="fas fa-tachometer-alt"></i> <span>Dashboard</span></a>
						</li>
						<li class="list-divider"></li>


						<li class="submenu">
							<a href="#">
								<i class="fas fa-suitcase"></i> <span> Booking </span> <span class="menu-arrow"></span>
							</a>
							<ul class="submenu_class" style="display: none;">
								<li><a href="/Admin/AllBooking"> All Booking </a></li>
								<li><a href="/Admin/AddBooking"> Add Booking </a></li>
							</ul>
						</li>
						<li class="submenu">
							<a href="#">
								<i class="fas fa-user"></i> <span> Customers </span> <span class="menu-arrow"></span>
							</a>
							<ul class="submenu_class" style="display: none;">
								<li><a href="/Admin/AllCustomer"> All customers </a></li>
								<li><a href="/Admin/AddCustomer"> Add Customer </a></li>
							</ul>
						</li>


						<li class="submenu">
							<a href="#">
								<i class="fas fa-key"></i> <span> Rooms </span> <span class="menu-arrow"></span>
							</a>
							<ul class="submenu_class" style="display: none;">
								<li><a class="active" href="/Admin/AllRoom">All Rooms </a></li>
								<li><a href="/Admin/AddRoom"> Add Rooms </a></li>
							</ul>
						</li>
						<li class="submenu">
							<a href="#">
								<i class="fas fa-user"></i> <span> Staff </span> <span class="menu-arrow"></span>
							</a>
							<ul class="submenu_class" style="display: none;">
								<li><a href="/Admin/AllStaff">All Staff </a></li>
								<li><a href="/Admin/AddStaff"> Add Staff </a></li>
							</ul>
						</li>

						<li>
							<a href="/Admin/Invoice"><i class="fas fa-money-bill-alt"></i> <span>Invoices</span></a>
						</li>

					</ul>
				</div>
			</div>
		</div>
		<!-- /Sidebar -->
		<!-- Page Wrapper -->
		<div class="page-wrapper">
			<div class="content container-fluid">
				<div class="page-header">
					<div class="row align-items-center">
						<div class="col">
							<div class="mt-5">
								<h4 class="card-title float-left mt-2">All Rooms</h4>
								<a href="/Admin/AddRoom" class="btn btn-primary float-right veiwbutton">Add Room</a>
							</div>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-sm-12">

						<div class="card card-table">
							<!-- <div class="card-header">
							<h4 class="card-title">List of Users</h4>
							</div> -->
							<div class="card-body booking_card">
								<div class="table-responsive">
									<table class="datatable table table-stripped table table-hover table-center mb-0">
										<thead>
											<tr>
												<th>Room Code</th>
												<th>Room Image</th>
												<th>Room Type</th>
												<th>Room Status</th>
												<th class="text-right">Actions</th>
											</tr>
										</thead>
										<tbody>
											@foreach (var room in Model)
											{
												<tr>
													<td>@room.RoomCode</td>
													<td>
														<h2 class="table-avatar">
															<a href="profile.html" class="avatar avatar-sm mr-2">
																<img class="avatar-img rounded-circle"
																src="@room.RoomImg"
																alt="User Image">
															</a>
														</h2>
													</td>
													<td>@room.RoomType</td>
													<td>
														<div class="actions">
															<span class="badge badge-@(room.RoomStatus ? "success" : "danger")">
																@(room.RoomStatus ? "Active" : "Blocked")
															</span>
														</div>
													</td>
													<td class="text-right">
														<div class="dropdown dropdown-action">
															<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fas fa-ellipsis-v ellipse_color"></i></a>
															<div class="dropdown-menu dropdown-menu-right">
																<a class="dropdown-item" href="/Admin/EditRoom/@room.RoomID"><i class="fas fa-pencil-alt m-r-5"></i> Edit</a>
																<a class="dropdown-item delete-room-btn" href="#" data-room-id="@room.RoomID" data-toggle="modal" data-target="#delete_asset">
																	<i class="fas fa-trash-alt m-r-5"></i> Delete
																</a>
															</div>
														</div>
													</td>
												</tr>
											}
										</tbody>
									</table>
								</div>
							</div>
						</div>

					</div>
				</div>
			</div>
			<div id="delete_asset" class="modal fade delete-modal" role="dialog">
				<div class="modal-dialog modal-dialog-centered">
					<div class="modal-content">
						<form method="post" asp-action="DeleteRoom" asp-controller="Admin">
							<input type="hidden" id="deleteRoomId" name="id" />
							<div class="modal-body text-center">
								<img src="~/assets/img/sent.png" alt="" width="50" height="46">
								<h3 class="delete_class">Are you sure you want to delete this room?</h3>
								<div class="m-t-20">
									<a href="#" class="btn btn-white" data-dismiss="modal">Close</a>
									<button type="submit" class="btn btn-danger">Delete</button>
								</div>
							</div>
						</form>

					</div>
				</div>
			</div>
		</div>
		<!-- /Page Wrapper -->
	</div>
	<!-- /Main Wrapper -->
	<!-- jQuery -->
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script data-cfasync="false" src="~/cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>
	<script src="~/assets/js/jquery-3.6.0.min.js" type="d84f0b2c8e85591eb1989331-text/javascript"></script>
	<!-- Bootstrap Core JS -->
	<script src="~/assets/js/popper.min.js" type="d84f0b2c8e85591eb1989331-text/javascript"></script>
	<script src="~/assets/js/bootstrap.bundle.min.js" type="d84f0b2c8e85591eb1989331-text/javascript"></script>
	<!-- Slimscroll JS -->
	<script src="~/assets/plugins/slimscroll/jquery.slimscroll.min.js" type="d84f0b2c8e85591eb1989331-text/javascript"></script>
	<script src="~/assets/plugins/raphael/raphael.min.js" type="d84f0b2c8e85591eb1989331-text/javascript"></script>
	<!-- Datatables JS -->
	<script src="~/assets/plugins/datatables/jquery.dataTables.min.js" type="d84f0b2c8e85591eb1989331-text/javascript"></script>
	<script src="~/assets/plugins/datatables/datatables.min.js" type="d84f0b2c8e85591eb1989331-text/javascript"></script>
	<!-- Custom JS -->
	<script src="~/assets/js/script.js" type="d84f0b2c8e85591eb1989331-text/javascript"></script>
	<script src="~/cdn-cgi/scripts/7d0fa10a/cloudflare-static/rocket-loader.min.js" data-cf-settings="d84f0b2c8e85591eb1989331-|49" defer></script>
	<script defer src="https://static.cloudflareinsights.com/beacon.min.js/vcd15cbe7772f49c399c6a5babf22c1241717689176015" integrity="sha512-ZpsOmlRQV6y907TI0dKBHq9Md29nnaEIPlkf84rnaERnq6zvWvPUqr2ft8M1aS28oN72PdrCzSjY4U6VaAw1EQ==" data-cf-beacon='{"rayId":"9303071f4c9703d7","version":"2025.3.0","serverTiming":{"name":{"cfExtPri":true,"cfL4":true,"cfSpeedBrain":true,"cfCacheStatus":true}},"token":"3ca157e612a14eccbb30cf6db6691c29","b":1}' crossorigin="anonymous"></script>
	<script>
		$(document).on("click", ".delete-room-btn", function () {
			const roomId = $(this).data("room-id");
			console.log("Selected room ID: ", roomId);
			$("#deleteRoomId").val(roomId);
		});
	</script>

</body>


</html>