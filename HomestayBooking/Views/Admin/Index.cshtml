	<script>
		document.addEventListener("DOMContentLoaded", function () {
			var data = @Html.Raw(Json.Serialize(Model.RoomTypeRatios));
			console.log("Chart Data:", data);

			if (!data || data.length === 0) {
				document.getElementById("donut-chart").innerHTML = "<p>No data available.</p>";
				return;
			}

			Morris.Donut({
				element: 'donut-chart',
				data: data.map(function (x) {
					return {
						label: x.roomTypeName || x.RoomTypeName,
						value: x.count || x.Count
					};
				}),
				colors: ['#ff9f40', '#4bc0c0', '#36a2eb', '#9966ff'],
				resize: true
			});
		});
	</script>


</body>


</html>
